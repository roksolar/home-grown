<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="mpsp.homegrown.ProfileFragment">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <Button
            android:id="@+id/badgespoints_b"
            style="@style/Base.Widget.AppCompat.Button"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="5dp"
            android:background="@color/cardview_light_background"
            android:drawableRight="@drawable/ic_dashboard_black_24dp"
            android:gravity="left|center_vertical"
            android:onClick="â™¦"
            android:paddingLeft="20dp"
            android:paddingRight="20dp"
            android:text="Badges &amp; Points" />

        <Button
            android:id="@+id/notifications_b"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentStart="true"
            android:layout_below="@+id/badgespoints_b"
            android:text="Notifications"
            android:layout_alignParentEnd="true"
            android:background="@color/cardview_light_background"
            android:drawableRight="@drawable/ic_notifications_black_24dp"
            android:gravity="left|center_vertical"
            android:paddingLeft="20dp"
            android:paddingRight="20dp"
            android:layout_marginTop="5dp"/>


    </RelativeLayout>

</FrameLayout>
